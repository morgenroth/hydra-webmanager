<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui"
	xmlns:viz="urn:import:com.google.gwt.visualization.client.visualizations">
	<ui:style>
		.formButton {
			margin-left: 6px;
			margin-right: 6px;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="6">
				<b:Heading size="3">Traffic</b:Heading>
				<g:SimplePanel ui:field="panelTraffic" />
			</b:Column>
			<b:Column size="6">
				<b:Heading size="3">Bundles</b:Heading>
				<g:SimplePanel ui:field="panelBundles" />
			</b:Column>
		</b:Row>
    	<b:Row>
	    	<b:Column size="12">
	    	    <g:HTMLPanel><hr /></g:HTMLPanel>
	    	</b:Column>
    	</b:Row>
		<b:Container ui:field="containerNodeStats" />
		<b:Row>
			<b:Column size="6">
				<b:InputAddOn prependText="Node" appendIcon="PLUS" addStyleNames="{style.formButton}">
				    <b:ListBox ui:field="listNodes">
				        <g:item value="-">- select a node -</g:item>
				    </b:ListBox>
				</b:InputAddOn>
			</b:Column>
		</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
	xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui"
	xmlns:viz="urn:import:com.google.gwt.visualization.client.visualizations">
	<ui:style>
		.icon-remove {
			margin-left: 12px;
			margin-right: 12px;
			text-decoration: none;
		}

		.icon-remove:hover {
			margin-left: 12px;
			margin-right: 12px;
			text-decoration: none;
		}
	</ui:style>
	<g:HTMLPanel>
		<b:Row>
			<b:Column size="3">
			    <g:HorizontalPanel spacing="12" verticalAlignment="ALIGN_MIDDLE">
					<b:Heading size="3" ui:field="headingNode"></b:Heading>
					<base:IconAnchor icon="REMOVE_SIGN" ui:field="buttonRemove" addStyleNames="{style.icon-remove}">
					</base:IconAnchor>
				</g:HorizontalPanel>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="6">
				<b:Heading size="4" ui:field="headingTraffic">Traffic</b:Heading>
				<g:SimplePanel ui:field="panelTraffic" />
			</b:Column>
			<b:Column size="6">
				<b:Heading size="4" ui:field="headingBundles">Bundles</b:Heading>
				<g:SimplePanel ui:field="panelBundles" />
			</b:Column>
			<b:Column size="6">
				<b:Heading size="4" ui:field="headingClock">Clock</b:Heading>
				<g:SimplePanel ui:field="panelClock" />
			</b:Column>
		</b:Row>
    	<b:Row>
	    	<b:Column size="12">
	    	    <g:HTMLPanel><hr /></g:HTMLPanel>
	    	</b:Column>
    	</b:Row>
	</g:HTMLPanel>
</ui:UiBinder> 